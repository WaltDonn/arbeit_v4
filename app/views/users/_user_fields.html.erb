<%= f.input :first_name %>
<%= f.input :last_name %>
<%= f.input :email %>

<%= f.input :password %>
<%= f.input :password_confirmation %>

<% if current_user && current_user.role?(:admin) %>
  <%= f.input :role, :collection => User::ROLES, :prompt => true %>
<% end %>
<%= f.input :active, as: "boolean" %>
